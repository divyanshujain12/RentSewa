<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/two_dp"

    android:layout_height="@dimen/two_hundred_fifty_dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/categoryIV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/property" />

    <com.neopixl.pixlui.components.textview.TextView
        android:id="@+id/categoryNameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="category name"
        android:gravity="bottom"
        android:background="@drawable/black_gradient_background"
        android:textSize="@dimen/twenty_sp"
        android:textColor="@color/white"
        android:padding="@dimen/eight_dp"
        pixlui:typeface="Roboto-Medium.ttf" />
</FrameLayout>