<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:id="@+id/primaryImageFL"
    android:layout_width="@dimen/two_hundred_dp"
    android:layout_height="@dimen/two_hundred_dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="@dimen/ten_dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/rounded_corner_light_grey">


    <ImageView
        android:id="@+id/primaryIV"
        android:layout_width="@dimen/two_hundred_dp"
        android:layout_height="@dimen/two_hundred_dp"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:id="@+id/addImageLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:alpha=".8"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/addImageIV"
            android:layout_width="@dimen/fifty_dp"
            android:layout_height="@dimen/fifty_dp"
            android:src="@drawable/ic_add" />

        <com.neopixl.pixlui.components.textview.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:gravity="center_vertical"
            android:text="Add Primary Image"
            android:textColor="@color/white"
            android:textSize="@dimen/twelve_sp"
            pixlui:typeface="Roboto-Medium.ttf" />
    </LinearLayout>

    <ImageView
        android:id="@+id/editIV"
        android:layout_width="@dimen/fourty_dp"
        android:layout_height="@dimen/fourty_dp"
        android:layout_margin="@dimen/five_dp"
        android:background="@drawable/rounded_shape_blue_button"
        android:padding="@dimen/ten_dp"
        android:layout_gravity="bottom|right"
        android:src="@drawable/ic_edit" />
</FrameLayout>