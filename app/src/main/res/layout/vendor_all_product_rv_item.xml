<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    tools:context="com.example.divyanshujain.rentsewa.VendorAllProductListing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/two_hundred_dp"
            >

            <ImageView
                android:id="@+id/productIV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#44000000"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/deleteIV"
                    android:layout_width="@dimen/fourty_dp"
                    android:layout_height="@dimen/fourty_dp"
                    android:layout_gravity="end|bottom"
                    android:layout_margin="@dimen/five_dp"
                    android:background="@drawable/rounded_shape_blue_button"
                    android:padding="@dimen/ten_dp"
                    android:src="@drawable/ic_delete" />

                <ImageView
                    android:id="@+id/editIV"
                    android:layout_width="@dimen/fourty_dp"
                    android:layout_height="@dimen/fourty_dp"

                    android:layout_margin="@dimen/five_dp"
                    android:background="@drawable/rounded_shape_blue_button"
                    android:padding="@dimen/ten_dp"
                    android:src="@drawable/ic_edit" />
            </LinearLayout>
        </FrameLayout>


        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/productTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/eight_dp"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/eighteen_sp"
            pixlui:typeface="Roboto-Medium.ttf" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/productPriceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="@dimen/eight_dp"
                android:text="@string/price"
                android:textColor="@color/black"
                android:textSize="@dimen/twenty_sp"
                pixlui:typeface="Roboto-Medium.ttf" />


            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/timePeriodTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/eight_dp"
                android:text="@string/time_period"
                android:textColor="@color/black"
                android:textSize="@dimen/sixteen_sp"
                pixlui:typeface="Roboto-Regular.ttf" />
        </FrameLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
