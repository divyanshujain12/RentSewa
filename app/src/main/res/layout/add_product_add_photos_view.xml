<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/one_hundred_dp"
    tools:showIn="@layout/activity_vendor_add_product">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/addedImageLL"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </LinearLayout>

        <FrameLayout android:layout_width="@dimen/one_hundred_dp"
            android:layout_height="match_parent"
            xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
            android:background="@drawable/rounded_corner_light_grey">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/fifty_dp"
                    android:layout_height="@dimen/fifty_dp"
                    android:id="@+id/addImageIV"
                    android:src="@drawable/ic_add" />

                <com.neopixl.pixlui.components.textview.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Add Photos"
                    android:layout_marginTop="@dimen/five_dp"
                    android:textSize="@dimen/twelve_sp"
                    android:textColor="@color/white"
                    pixlui:typeface="Roboto-Medium.ttf" />
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>
</HorizontalScrollView>