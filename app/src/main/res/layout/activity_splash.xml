<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/logoLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/two_hundred_dp"
            android:layout_height="@dimen/two_hundred_dp"
            android:layout_margin="@dimen/five_dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_width="@dimen/two_hundred_dp"
                android:layout_height="@dimen/two_hundred_dp"
                android:layout_centerInParent="true"
                android:src="@drawable/splash_icon" />

        </android.support.v7.widget.CardView>

        <com.neopixl.pixlui.components.textview.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/two_dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/fourty_sp"
            pixlui:typeface="Quikhand.ttf" />
        <com.neopixl.pixlui.components.textview.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rent_is_new_trend"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_sp"
            pixlui:typeface="Quikhand.ttf" />
    </LinearLayout>
</FrameLayout>
